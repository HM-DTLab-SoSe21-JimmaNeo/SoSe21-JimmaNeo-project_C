@using SEIIApp.Shared.ContentDto

<div class="PostPreviewWrapper">
    @if (_contents.Length > RowCount)
    {
        for (var i = 0; i < RowCount * 3; i++)
        {
            <ContentPreview Content="_contents[i]"/>
        }
    }
</div>


@code {
    [Parameter]
    public int RowCount { get; set; }
    
    private Content[] _contents = new Content[] {
        new Paper("Der OP"), 
        new Paper("Neonatologie"), 
        new Paper("Diagnose"),
        new Paper("Test 1"),
        new Paper("Test 2"),
        new Paper("Test 3"),
        new Paper("Test 4"),
        new Paper("Test 5"),
        new Paper("Test 6"),
    };
}